import random

class Jogador:
    def __init__(self, nome):
        self.nome = nome
        self.vida = 100
        self.municao = 5
        self.x = random.randint(0, 4)
        self.y = random.randint(0, 4)

    def mover(self, direcao):
        if direcao == "cima" and self.x > 0:
            self.x -= 1
        elif direcao == "baixo" and self.x < 4:
            self.x += 1
        elif direcao == "esquerda" and self.y > 0:
            self.y -= 1
        elif direcao == "direita" and self.y < 4:
            self.y += 1
        else:
            print("Movimento invÃ¡lido ou fora do mapa.")

